---
title: Style Guides
---

header
  nav.navbar.navbar-default
    .container
      .navbar-header
        button.navbar-toggle.collapsed type="button" data-toggle="collapse" data-target="#navbar-collapse"
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        = link_to 'Viode', 'http://viode.github.io/', class: 'navbar-brand'

      .collapse.navbar-collapse#navbar-collapse
        ul.nav.navbar-nav
          li.active
            = link_to 'Viode UI', 'http://viode.github.io/viode-ui'
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            = link_to 'Jump to', '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
            ul.dropdown-menu
              li = link_to 'Colors', '#colors'
              li = link_to 'Fonts', '#fonts'
              li.divider
              li = link_to 'Alerts', '#alerts'
              li = link_to 'Panels', '#panels'

.container-fluid
  = partial 'colors'
  = partial 'fonts'
  = partial 'alerts'
  = partial 'panels'
